print("Welcoma to MHZ Fast Food\nHere you can have fries for 50, burger for 200, pizza for 1000, sandwich for 70. ")
t=int(input("How many types of items you want to have:"))
if t==1:
    i=input("press f for fries, b for burger, p for pizza, s fo sandwich : ")
    if i=='f':
        n=int(input("Enter number of FRIES you want to have : "))
        x = n*50
        print(f"Your total bill is {x}")
        print("Have a nice day....")
    elif i=='b':
         n = int(input("Enter number of BURGERS you want to have : "))
         x = n * 200
         print(f"Your total bill is {x}")
         print("Have a nice day....")
    elif i == 'p':
        n = int(input("Enter number of PIZZAS you want to have : "))
        x = n * 1000
        print(f"Your total bill is {x}")
        print("Have a nice day....")
    elif i=='s':
         n = int(input("Enter number of SANDWICHES you want to have : "))
         x = n * 70
         print(f"Your total bill is {x}")
         print("Have a nice day....")
    else:
        print("This item is not available or you are not following procedure")
        exit(1)
